# Auto detect text files and perform LF normalization
* text=auto

#include <stdio.h>
//#include <stdlib,h>

int main() {
	
	int i=2, j, N,t;
	int k=0,num, isPrime,q;
	int a[20][20];
	int b[] = { 1,11,55,165,330,462,462,330,165,55,11,1 };
	

	printf("你想打印几行的杨辉三角（6到10之间）\n");
	scanf_s("%d",&N);
	printf("\n");

	a[0][0] = 1;
	a[1][0] = 1;
	a[1][1] = 1;
	printf("%d\n",a[0][0]);

	while (i < N) {
		a[i][0] = 1;
		printf("%d",a[i][0]);
		printf(" ");
		for (j = 1; j < i; j++) {
			
			a[i][j] = a[i - 1][j - 1] + a[i - 1][j];
			a[i][i] = 1;
			printf("%d",a[i][j]);
			printf(" ");
		}
		i++;
		printf("%d",a[i][i]=1);
		printf("\n");
	}
	printf("\n");
	printf("\n");
	
	for (i = 1; i < 12; i++) 
		for (j = 1; j < 11; j++) {
			if (b[j] > b[j + 1]) {
				t = b[j];
				b[j] = b[j + 1];
				b[j + 1] = t;
			}
		}
	for (i = 0; i < 12; i++) {
		if (i > 0)printf(" ");
		printf("%d", b[i]);
	}

	printf("\n");
	printf("\n");


	printf("\n第十二行的质数有：\n");
	for (i = 0; i < 12; i++) {

		isPrime = 1;

		if (b[i] < 1) {
			isPrime = 0;
		}
		else if (b[i] == 2) {
			isPrime = 1;
		}
		else {
			for (j = 2; j < b[i]; j++) {
				if (b[i] % j == 0) {
					isPrime = 0;
					break;
				}
			}
		}
		if (isPrime == 1) {
			printf("%d", b[i]);
			printf(" ");
		}
	}

	printf("\n");
	printf("\n");
	return 0;
}
